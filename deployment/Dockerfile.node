FROM python:3.11-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir \
    "aiohttp>=3.8.0" \
    "requests>=2.28.0" \
    "python-dotenv>=1.0.0" \
    "websockets>=11.0.0" \
    "flask-socketio>=5.3.0" \
    "eventlet>=0.33.0" \
    "flask>=2.3.0" \
    "flask-cors>=4.0.0" \
    "psutil>=5.9.0" \
    "pynvml>=11.5.0"

# Set Python path
ENV PYTHONPATH=/app

# Copy source code
COPY . /app/

# Default command
CMD ["python", "/app/src/core/new_zion_blockchain.py"]
